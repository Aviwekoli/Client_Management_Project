<!-- views/clients.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clients</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Basic styles for the modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 5px;
            width: 500px;
            max-width: 100%;
        }
    </style>
</head>
<body>
    <h1>Clients</h1>

    <!-- Button to open the create client form -->
    <!-- <button onclick="openModal()">Create a Client</button> -->

    <!-- Display client list conditionally -->
    <% if (clients.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th style="text-align: left;">Name</th>
                    <th style="text-align: left;">Client Code</th>
                    <th style="text-align: center;">Linked Accounts</th>
                </tr>
            </thead>
            <tbody>
                <% clients.forEach(client => { %>
                    <tr>
                        <td><%= client.name %></td>
                        <td><%= client.client_code %></td>
                        <td style="text-align: center;"><%= client.linked_accounts %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No client(s) found.</p>
    <% } %>

    <!-- Modal for creating a new client -->
    <div id="clientModal" class="modal">
        <div class="modal-content">
            <span onclick="closeModal()" style="cursor: pointer; float: right;">&times;</span>
            <h2>Create a New Client</h2>
            <form action="/clients/create" method="POST">
                <div>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <button type="submit">Save Client</button>
            </form>
        </div>
    </div>

    <script>
        // JavaScript to handle modal
        function openModal() {
            document.getElementById('clientModal').style.display = 'flex';
        }
        function closeModal() {
            document.getElementById('clientModal').style.display = 'none';
        }
    </script>
</body>
</html>